#include<stdio.h>
int main(void) {
    
    int a,b, choice;
    printf("enter the value for a");
    scanf("%d", &a);
    printf("enter the value for b");
    scanf("%d", &b);
    printf("add or subtract?? press 1 for add and 0 for subtract");
    scanf("%d", &choice);
    
    if(choice==1) {
    add(a,b);
    }
    
    else if(choice==0) {
    sub(a,b);
    }
    
    return 0;
}

add( int a, int b) {
    int c;
    c=a+b;
    printf("a+b= %d", c);
}
sub( int a, int b) {
    int c;
    c=a-b;
    printf("a-b= %d", c);
}
